<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" type="text/css" href="bower_components/bootstrap/dist/css/bootstrap.css">
    <script src="bower_components/jquery/dist/jquery.js"></script>
    <script src="bower_components/bootstrap/dist/js/bootstrap.js"></script>
    <script src = "bower_components/angular/angular.min.js"></script>
    <script src="angular/NgUpload.js"></script>
</head>
<body ng-app="myApp">
<center><h1><%= title %></h1></center>
<div ng-controller="myCtrl" ng-init="showProgress=false">
    <div class="well">
        <div class="row">
            <div class="col-md-4">
            </div>
            <div class="col-md-5">
                <label class="btn btn-default btn-file"> <input
                            type="file" file-model="myFile" />
                </label>
                <a href="#" class="btn btn-info btn-md" ng-click="uploadFile()">
                    <span class="glyphicon glyphicon-cloud-upload"></span> Upload Image
                </a>
                </span>
            </div>
            <div class="col-md-3">
            </div>
        </div>
    </div>
    <div ng-if="imagePresent" align="center">
        <div class="well">
            <img ng-src="{{image}}" class="img-rounded" alt="Cinque Terre" width="304" height="236">
        </div>
        <div class="row" ng-show="showProgress">
            <center>
                <div class="container">
                    <div class="progress">
                        <div class="progress-bar progress-bar-striped active"
                             role="progressbar" aria-valuenow="100" aria-valuemin="0"
                             aria-valuemax="100" style="width: 100%">Uploading Data</div>
                    </div>
                </div>
            </center>
        </div>
    </div>
</div>
</body>
</html>